{
  "name": "monib-life-website",
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "dev": "npm run sync && concurrently \"npm run watch:vault\" \"astro dev\"",
    "dev:simple": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build && npm run postbuild",
    "postbuild": "npx -y pagefind --site dist && npm run build:graph",
    "preview": "astro preview",
    "build:graph": "tsx scripts/build-graph.ts",
    "build:dates": "tsx scripts/extract-git-dates.ts",
    "validate": "tsx scripts/validate-wikilinks.ts",
    "sync": "bash scripts/sync-vault.sh",
    "watch:vault": "node scripts/watch-vault.js",
    "test": "vitest",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.0",
    "@astrojs/react": "^3.6.0",
    "@astrojs/rss": "^4.0.0",
    "@astrojs/sitemap": "^3.1.0",
    "@astrojs/tailwind": "^5.1.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "astro": "^5.16.6",
    "d3": "^7.9.0",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "katex": "^0.16.0",
    "mdast-util-to-string": "^4.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "rehype-katex": "^7.0.0",
    "remark-math": "^6.0.0",
    "tailwindcss": "^3.4.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "chokidar": "^4.0.3",
    "concurrently": "^9.1.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  }
}
